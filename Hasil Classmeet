<body>
    <div class="container">
        <h1>Hasil Pendaftaran Class Meeting OSIS SMPN 3 Payakumbuh</h1>
        <table id="resultsTable">
            <thead>
                <tr>
                    <th>Nama</th>
                    <th>Kelas</th>
                    <th>Konfirmasi Kehadiran</th>
                    <th>Lomba</th>
                    <th>Lagu</th>
                    <th>Waktu Daftar</th>
                </tr>
            </thead>
            <tbody>
                <!-- Data akan diisi oleh JavaScript -->
            </tbody>
        </table>
        <p style="text-align: center; margin-top: 20px;">
            <a href="index.html">Kembali ke Formulir</a> <!-- Ganti 'index.html' dengan nama file form Anda -->
        </p>
    </div>

    <script>
        // Ambil data dari localStorage dan tampilkan di tabel
        const registrations = JSON.parse(localStorage.getItem('registrations')) || [];
        const tbody = document.querySelector('#resultsTable tbody');

        if (registrations.length === 0) {
            tbody.innerHTML = '<tr><td colspan="6" style="text-align: center;">Belum ada pendaftaran.</td></tr>';
        } else {
            registrations.forEach(reg => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${reg.nama}</td>
                    <td>${reg.kelas}</td>
                    <td>${reg.konfirmasi}</td>
                    <td>${reg.lomba || 'Tidak ikut'}</td>
                    <td>${reg.lagu}</td>
                    <td>${reg.timestamp}</td>
                `;
                tbody.appendChild(row);
            });
        }
    </script>
</body>
